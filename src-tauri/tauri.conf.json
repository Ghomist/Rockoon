{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rockoon",
  "version": "1.2.0",
  "identifier": "com.ghomist.rockoon",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rockoon",
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "width": 1000,
        "height": 600,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
